<section class="section-course">
  <div class="section-course-div">
    {{#with course}}
    <div class="title-course">
      <h2>{{name}}</h2><br>
      {{!-- <div>
        <a class="course.detail-edit" href="/course/edit/{{_id}}">Edit</a>
        <a href="/course/delete/{{_id}}">Delete</a>
      </div> --}}
      <br>
    </div>

    <div class="course-details-infos">
      <br>
      <div class="div-infos-course">
        <i class="fas fa-graduation-cap"></i>
        <h4>Instituição:</h4>
        <h3>{{institution}}</h3>
      </div>
      <div class="div-infos-course">
        <i class="fas fa-money-check-alt"></i>
        <h4>Valor:</h4>
        <h3>{{value}}</h3>
      </div>
      <div class="div-infos-course">
        <i class="fas fa-clock"></i>
        <h4>Duração:</h4>
        <h3>{{duration}} horas</h3>
      </div>
      <div>
      </div>
      <div class="div-infos-course">
        <i class="fas fa-play-circle"></i>
        <h4>Formato:</h4>
        <h3>{{format}}</h3>
      </div>
      <div class="div-infos-course">
        <i class="fas fa-list-alt"></i>
        <h4>Categoria:</h4>
        <h3>{{category}}</h3>
      </div>

      <div class="div-infos-course">
        <i class="fas fa-star"></i>
        <h4>Média:</h4>
        <h3 id="avg"></h3>
      </div>

        <a class="btn-course-site" href="{{link}}">Ver curso</a>

      <br>
      <ul>
    </div>
  </div>


<div class="course-reviews-title">
  <h3>Avaliações</h3>
</div>
  {{#each reviews}}
  <div {{#if isOwner}}class="editable" {{/if}}>
    <h2>{{writer.username}}</h2>

    <input type="text" name="id" class="reviewID" value="{{_id}}" hidden>
    <textarea cols="100" class="textReview" rows="3" disabled>{{text}}</textarea>

    <br><br>
    <div>
      <label for="">Rating</label>
      <select class="ratingReview" disabled>
        {{#each ratings}}
        <option value="{{value}}" {{#if isRating}}selected{{/if}}>{{value}}</option>
        {{/each}}
      </select>
    </div>
    <br>
    {{#if isOwner}}
    <button type="button" class="edit">Editar</button>
    <button type="button" class="save" hidden>Salvar</button>
    <button type="button" class="delete">Deletar</button>
    <br>
    {{/if}}
  </div>
  {{/each}}
  </ul>


  <p>Add a review</p>
  <form action="/reviews/add/{{_id}}" method="post">
    <h2>{{writer.username}}</h2>
    <label for="">Avaliação:</label>

    <textarea type="text" name="text" required></textarea>

    <label for="">Rating</label>
    <select name="rating" required>
      {{!-- <option value="6">--</option> --}}
      <option value="0">0</option>
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
    </select>

    <button type="submit">Adicionar</button>

    {{/with}}
</section>


